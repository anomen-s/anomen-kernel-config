#!/bin/sh

readtable() {
  echo -n 'sed '
  while read MAC NODE
  do
    MAC=`echo $MAC | tr '[:upper:]' '[:lower:]' `
    echo -n " -e '/$MAC/s/\$/\t$NODE/' " 
  done  < /usr/local/etc/arp-table.txt
}


ARP=`readtable`

#echo $ARP
#echo 
#for A in ARP ; do echo $ARP ; done
sudo arp-scan --timeout=200 --numeric  --localnet | grep -E '^[0-9][0-9.]' | tr '[:upper:]' '[:lower:]' | bash -c "$ARP" | sort -n

