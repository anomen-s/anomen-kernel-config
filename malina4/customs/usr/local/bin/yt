#!/bin/sh

mkdir -p /mnt/work/downloads/yt
cd /mnt/work/downloads/yt

export OPENSSL_CONF=/etc/ssl/openssl-weak.cnf

P=$$
test -z "$2" || P="${P}-${2}"

mkdir "$P"
cd "$P"

echo youtube-dl "$P" "$@"

echo "$@" >> history.txt
exec screen -d -m -S "yt-$P" youtube-dl --merge-output-format mkv -v --all-subs "$@" >> output.log


