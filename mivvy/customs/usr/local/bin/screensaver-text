#!/bin/sh

H=`hostname`
L=`whoami`
echo "$L@$H"

uname -s -r

echo ""

date '+%Y-%m-%d %H:%M:%S'

DIR=/sys/devices/LNXSYSTM:*/device:*/PNP*/device:*/PNP*/PNP*/power_supply/BAT1

CN=`cat $DIR/charge_now`
CF=`cat $DIR/charge_full`
CC=`echo 100 '*' $CN / $CF | bc`

echo -n "$CC%, "

cat $DIR/status

T=`sensors -u | sed -n -e 's/.*temp1_input:\s*\([0-9]*\.[0-9]\).*/\1/p'`

# xscreensave needs iso-8859-1 charset (\260 = 0xB0 = degree sign)
echo "$T \260C"

echo ""
echo ""
echo ""
